  </runtime>

  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
    <applicationInitialization skipManagedModules="false" doAppInitAfterRestart="true">
      <add initializationPage="/default.aspx" />
    </applicationInitialization>
  </system.webServer>

  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_PlatformService" maxReceivedMessageSize="10000000">
          <security mode="Transport" />
        </binding>
        <binding name="BasicHttpBinding_PlatformService1" maxReceivedMessageSize="10000000">
          <security mode="Transport" />
        </binding>
      </basicHttpBinding>
    </bindings>

    <client>
      <endpoint address="https://adminint.crossroads.net/ministryplatformapi/PlatformService.svc/soap/oauth" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_PlatformService" contract="PlatformService.PlatformService" name="BasicHttpBinding_PlatformService" />
    </client>
  </system.serviceModel>
  <system.data>
  </system.data>
  <crossroadsClientApiKeysUnity configSource="Crossroads.ClientApiKeys-Unity.config" />
</configuration>
